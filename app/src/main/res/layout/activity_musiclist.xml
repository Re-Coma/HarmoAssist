<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 툴바 쳐넣는 자리 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_card_design"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background= "@drawable/black_card_design"
                    android:src="@android:drawable/ic_menu_search"
                    android:id="@+id/list_search_btn"
                    android:layout_weight="6">

                </ImageButton>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/list_search_text"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:background="@drawable/red_layout_design">

                </EditText>
                <!--
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:src="@android:drawable/ic_menu"
                        android:id="@+id/list_mananger_btn"
                        android:layout_weight="4">

                </ImageButton>
                -->
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>